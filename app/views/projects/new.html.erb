<div class=" d-flex flex-column align-items-center my-4">

  <h2>Create new Project</h2>

  <%= form_for @project do |f| %>

    <div class="form-group">
      <%= f.label :name %><br />
      <%= f.text_field :name, class: "form-control my-1" , autofocus: true, placeholder: "Enter Project name" %>
    </div>

    <div class="form-group">
      <%= f.label :description %><br />
      <%= f.text_field :description , class: "form-control my-1" , autofocus: true, placeholder: "Enter Project description" %>
    </div>

    <div class="form-group">
      <%= f.label :Developers, "Developers to Assign" %><br />
      <%= select_tag "users1[]", options_for_select(@users1.collect{|x| [x.name + " ( " + x.user_type + " )" ,x.id]}), {:multiple => :multiple, :size => 10, :class => 'form-control form-control my-1'} %>
    </div>

    <div class="form-group">
      <%= f.label :Developers, "QA to Assign" %><br />
      <%= select_tag "users2[]", options_for_select(@users2.collect{|x| [x.name + " ( " + x.user_type + " )" ,x.id]}), {:multiple => :multiple, :size => 10, :class => 'form-control form-control my-1'} %>
    </div>

    <div class="actions">
      <%= f.submit "Create Project" , class:"my-1 btn btn-primary col-12"%>
    </div>
  <% end %>
</div>